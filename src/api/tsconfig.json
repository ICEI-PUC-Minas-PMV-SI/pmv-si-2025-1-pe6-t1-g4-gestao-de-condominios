{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@types": [
        "@types\\index.ts"
      ],
      "@assets": [
        "assets\\index.ts"
      ],
      "@controllers": [
        "controllers\\index.ts"
      ],
      "@db": [
        "db\\index.ts"
      ],
      "@example": [
        "example\\index.ts"
      ],
      "@helpers": [
        "helpers\\index.ts"
      ],
      "@middlewares": [
        "middlewares\\index.ts"
      ],
      "@validations": [
        "middlewares\\validations\\index.ts"
      ],
      "@providers": [
        "providers\\index.ts"
      ],
      "@routes": [
        "routes\\index.ts"
      ],
      "@services": [
        "services\\index.ts"
      ],
      "@templates": [
        "templates\\index.ts"
      ],
      "@utilities": [
        "utilities\\index.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

