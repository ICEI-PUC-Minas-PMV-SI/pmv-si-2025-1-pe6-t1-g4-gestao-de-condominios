{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["@types/*"],
      "@assets/*": ["assets/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@example/*": ["example/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@validations/*": ["middlewares/validations/*"],
      "@providers/*": ["providers/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@templates/*": ["templates/*"],
      "@utilities/*": ["utilities/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

